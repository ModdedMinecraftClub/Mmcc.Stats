<Project>
  <Import Project="Sdk.props" Sdk="Microsoft.NET.Sdk.Web" />
  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="2.2.0" />
    <PackageReference Include="Serilog" Version="2.10.0-dev-01213" />
    <PackageReference Include="Serilog.AspNetCore" Version="3.4.0" />
    <PackageReference Include="Serilog.Sinks.Console" Version="4.0.0-dev-00839" />
    <PackageReference Include="Serilog.Sinks.File" Version="5.0.0-dev-00887" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Mmcc.Stats.Core\Mmcc.Stats.Core.csproj" />
    <ProjectReference Include="..\Mmcc.Stats.Infrastructure\Mmcc.Stats.Infrastructure.csproj" />
  </ItemGroup>
  
  <Import Project="Sdk.targets" Sdk="Microsoft.NET.Sdk.Web" />
  
  <Target Name="BuildSvelte" BeforeTargets="Build">
    <Message Importance="High" Text="Building Svelte" />
    <Exec Command="cd $(SolutionDir)\Mmcc.Stats.Frontend &amp;&amp; npm run build" />
  </Target>
  
  <Target Name="CopySvelte" AfterTargets="BuildSvelte" DependsOnTargets="BuildSvelte">
    <ItemGroup>
      <SvelteCompiled Include="$(SolutionDir)\Mmcc.Stats.Frontend\public\**\*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(SvelteCompiled)" DestinationFiles="@(SvelteCompiled->'$(SolutionDir)\Mmcc.Stats\wwwroot\%(RecursiveDir)%(Filename)%(Extension)')" />
  </Target>
  
</Project>
